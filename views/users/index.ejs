<!DOCTYPE html>
<html>

<body>
    <a href="/users/new">Add User</a>

    <ul>
        <%  userList.forEach( function(user)  {       %>
        <li>Name: <a href="/users/<%= user.id %>"> <%= user.name %></a></li>
        <li>Email: <%= user.email %></li>
        <li>City: <%= user.address.city %></li>
        <ul style="text-transform: capitalize;">
            <%  user.phones.forEach( function(phone)  {       %>
                <li><%= phone.phoneType %>: <%= phone.phoneNumber %></li>
            <% });    %>
        </ul>
        <ul>
            <h3>Posts:</h3>
            <%  user.posts.forEach( function(post)  {       %>
            <li> <%= post.title %></li>
            <% });    %>
        </ul>
        <ul>
            <h3>Tasks:</h3>
            <%  user.tasks.forEach( function(task)  {       %>
            <li> <a href='/tasks/<%= task.id %>/edit'><%= task.title %></a></li>
            <% });    %>
        </ul>
        <br>
        <a href="/users/<%= user.id %>/tasks/new">Add Task</a>
        <a href="/users/<%= user.id %>/posts/new">Add Post</a>
        <br>
        <br>
        <%  });    %>
    </ul>
</body>

</html>